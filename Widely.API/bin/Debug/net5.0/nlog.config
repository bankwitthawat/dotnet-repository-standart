<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-widelystandart.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- File Target for all log messages with basic details -->
    <target xsi:type="File" name="allfile" fileName="c:\temp\nlog-AspNetCore-all-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File Target for own log messages with extra web details using some ASP.NET core renderers -->
    <target xsi:type="File" name="ownFile-web" fileName="c:\temp\nlog-AspNetCore-own-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}| body: ${aspnet-request-posted-body}" />

    <target name="log_auth" xsi:type="Database" dbProvider="MySql.Data.MySqlClient.MySqlConnection, MySql.Data" connectionString="${configsetting:name=ConnectionStrings.DefaultConnection}">
      <commandText>
        insert into widelystandart.log_auth (
        Username
        , Action
        , Status
        , Message
        , RequestIp
        , TimeStamp
        ) values (
        @Username
        , @Action
        , @Status
        , @Message
        , @RequestIp
        , @TimeStamp
        );
      </commandText>

      <parameter name="@Username" layout="${mdlc:item=username}" />
      <parameter name="@Action" layout="${mdlc:item=action}" />
      <parameter name="@Status" layout="${mdlc:item=status}" />
      <parameter name="@Message" layout="${message}" />
      <parameter name="@RequestIp" layout="${aspnet-request-ip}" />
      <parameter name="@TimeStamp" layout="${date}" />
      
    </target>

    <target name="log_exception" xsi:type="Database" dbProvider="MySql.Data.MySqlClient.MySqlConnection, MySql.Data" connectionString="${configsetting:name=ConnectionStrings.DefaultConnection}">
      <commandText>
        insert into widelystandart.log_exception (
        TimeStamp
        , Level
        , Logger
        , Message
        , Exception
        , StackTrace
        , Username
        ) values (
        @TimeStamp
        , @Level
        , @Logger
        , @Message
        , @Exception
        , @StackTrace
        , @Username
        );
      </commandText>
      <parameter name="@TimeStamp" layout="${date}" />
      <parameter name="@Level" layout="${level:upperCase=true}"/>
      <parameter name="@Logger" layout="${logger}" />
      <parameter name="@Message" layout="${message}" />
      <parameter name="@Exception" layout="${exception}" />
      <parameter name="@StackTrace" layout="${stacktrace}" />
      <parameter name="@Username" layout="${mdlc:item=username}" />
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="allfile" />

    <!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

    <logger name="*" minlevel="Trace" writeTo="ownFile-web" />

    <!--Customs logs-->
    <logger name="Widely.API.Controllers.AuthController.*" minlevel="Debug" maxlevel="debug" writeTo="log_auth" />
    <logger name="*" minlevel="Warn" writeTo="log_exception" />
  
  </rules>
</nlog>
